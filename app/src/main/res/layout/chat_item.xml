<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_chat_view"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:visibility="visible"
            android:id="@+id/botLinear"
            android:layout_gravity="left"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/botbg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chatBotName"
                android:textColor="#3F51B5"
                android:fontFamily="@font/ubuntu_medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/left_chat_text_view"
                android:text=""
                android:layout_marginTop="5dp"
                android:textColor="@color/bothblack"
                android:fontFamily="@font/ubuntu_light"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/answer_time"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:textSize="10sp"
                    android:layout_gravity="left|center"
                    android:gravity="left|center"
                    android:fontFamily="@font/ubuntu_light"
                    android:text="11:02:13"
                    android:textColor="@color/bothblack" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="23dp"
                        android:id="@+id/ttsButton"
                        android:layout_height="23dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/baseline_volume_up_24"/>


                    <ImageView
                        android:layout_width="23dp"
                        android:id="@+id/reAnswer"
                        android:visibility="gone"
                        android:layout_height="23dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/reanswer"/>


                    <ImageView
                        android:id="@+id/copybotResponse"
                        android:layout_width="23dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_baseline_content_copy_24" />

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:id="@+id/sharebotResponse"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_baseline_share_24"/>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_chat_view"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|top"
            android:layout_marginTop="10dp"
            android:id="@+id/humanLinear"
            android:visibility="visible"
            android:layout_gravity="top|right"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/userbg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_medium"
                android:gravity="right"
                android:text="You:"
                android:textColor="#9C27B0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/right_chat_text_view"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ubuntu_light"
                android:text=""
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="@color/bothblack" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/question_time"
                    android:layout_marginLeft="0dp"
                    android:textSize="10sp"
                    android:layout_gravity="right|center"
                    android:gravity="right|center"
                    android:fontFamily="@font/ubuntu_light"
                    android:text="11:02:13"
                    android:textColor="@color/bothblack" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right">



                    <ImageView
                        android:layout_width="20dp"
                        android:id="@+id/editUserInput"
                        android:layout_marginLeft="10dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_edit_24"/>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>