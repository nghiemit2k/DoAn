<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devzen.chatbotai.FirstActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:background="@color/bg">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottommmm">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/topsideeee">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/top_bg">

                    <TextView
                        android:id="@+id/permissionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/ubuntu_medium"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/app_name"
                        android:textColor="@color/bothwhite"
                        android:textSize="22sp" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical">
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:visibility="visible"
                        android:id="@+id/homeAnimation"
                        app:lottie_autoPlay="true"
                        android:foregroundGravity="center"
                        app:lottie_loop="true" />

                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get prepared to begin \n Click start and inquire about your preferences"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/ubuntu_light"
                    android:id="@+id/permissionMessage"/>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/btnStartStop">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/stoptext"
                        android:text="START"

                        android:background="@drawable/bg"
                        android:gravity="center"
                        android:textColor="@color/bothwhite"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textSize="28sp"/>
                </RelativeLayout>




                <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/myBigBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ads:adSize="MEDIUM_RECTANGLE"
                    android:layout_marginTop="20dp"
                    ads:adUnitId="@string/admob_banner_id">

                </com.google.android.gms.ads.AdView>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:id="@+id/bottommmm">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:weightSum="4">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/about_us_email"
                    android:background="@drawable/bg_buttons"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:tint="@color/purple_500"
                        android:layout_gravity="center"
                        android:padding="2dp"
                        android:src="@drawable/ic_baseline_email_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="4dp"
                        android:text="Contact us"
                        android:textColor="@color/purple_500"
                        android:textSize="12sp" />

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_buttons"
                    android:layout_marginBottom="10dp"

                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:orientation="vertical"
                    android:id="@+id/about_us_more"
                    android:layout_weight="1"

                    android:padding="4dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:tint="@color/purple_500"
                        android:layout_gravity="center"
                        android:padding="2dp"
                        android:src="@drawable/ic_baseline_apps_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Other Apps"
                        android:layout_marginBottom="4dp"

                        android:textColor="@color/purple_500"
                        android:textSize="12sp" />

                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_buttons"
                    android:id="@+id/about_us_rate"
                    android:gravity="center"

                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:tint="@color/purple_500"
                        android:padding="2dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_star_24_1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="App Ranking"
                        android:layout_marginBottom="4dp"

                        android:textColor="@color/purple_500"
                        android:textSize="12sp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"

                    android:id="@+id/about_us_share"
                    android:background="@drawable/bg_buttons"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:tint="@color/purple_500"
                        android:layout_gravity="center"
                        android:padding="2dp"
                        android:src="@drawable/ic_baseline_share_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Share App"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/purple_500"
                        android:textSize="12sp" />

                </LinearLayout>



            </LinearLayout>



        </LinearLayout>




    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>